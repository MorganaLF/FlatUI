.freelancers
  padding rem(80px) rem(10px)
  &__container
    display flex
    flex-wrap wrap
  &__col
    &:first-child
      width 25%
      padding-right 3%
      +sm()
        order 2
        width 100%
        max-width 450px
        margin 0 auto
        padding-right 0
      .subheading
        padding-bottom rem(20px)
      .slider
        margin rem(30px) 0 rem(40px)
      .button
        width 100%
    &:last-child
      width 75%
      padding-left 3%
      +sm()
        width 100%
        padding-left 0
  &__main-title
    width 100%
    margin 0.83em 0
  &__page-nav-container
    padding rem(10px) 0 0
    border-top rem(1px) solid light-grey-text
    &:nth-child(2)
      margin-bottom rem(40px)
      padding 0 0 rem(10px)
      border-top 0
      border-bottom rem(1px) solid light-grey-text




