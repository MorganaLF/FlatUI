extends ../../templates/template

include ../../components/title/title
include ../../components/search/search
include ../../components/filter/filter
include ../../components/page-nav/page-nav
include ../../components/freelancers-list/freelancers-list

block append meta
  meta(name="keywords", content="Search freelancers, search " +
      "best freelancers, find a developer, find a designer, find " +
      "a seo copywriter")
  meta(name="description", content="Search for the best developers, " +
      "designers and copywriters throughout Russia at the best prices")

block title
  title Search freelancers

block content
  .freelancers
    .freelancers__container
      aside.freelancers__col
        .freelancers__title
          +title({ title: "search", tag: "h2" })
        +search({placeholderText: "Search freelancers", isAutofocus: true})
        .freelancers__title
          +title({ title: "filter", tag: "h2" })
        +filter
      main.freelancers__col
        .freelancers__main-title
          +title({ title: "search freelancers", tag: "h1" })
        .freelancers__page-nav
          +page-nav
        +freelancers-list
        .freelancers__page-nav
          +page-nav