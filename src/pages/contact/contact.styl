@import "../../styles/variables.styl"

.contact
  max-width 900px
  margin 0 auto
  padding 80px 10px

  &__title
    margin 40px 0

  &__container
    display flex
    flex-wrap wrap
    margin 0 auto

  &__col

    &_big
      width 70%
      padding-right 5%

      +sm()
        width 100%
        max-width 600px
        margin 0 auto
        padding-right 0

    &_small
      width 30%

      +sm()
        width 100%
        max-width 600px
        margin 0 auto

  &__subtitle
    margin 10px 0 20px
    font-size 22px

  &__map
    margin-bottom 40px

  &__list
    margin-bottom 40px
    list-style-type none
    font-size 18px

    &-item
      margin-bottom 5px
      break-word()

  &__list-title
    display inline-block
    margin-right 10px
    font-weight 900

  &__list-link
    color dark-secondary-color
    text-decoration none
    transition 0.2s ease

    &:hover
      color black




