@import "../../styles/variables.styl"

.account
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 0 auto
  padding 80px 10px

  &__col
    width 50%

    +sm()
      width 100%

    &_left
      padding-right 5%

      +sm()
        padding-right 0

    &_right
      padding-left 5%

      +sm()
        padding-left 0

  &__title-container
    margin 40px 10px

  &__user-container
    display flex
    flex-direction column
    align-items center

  &__deadlines
    display flex
    flex-wrap wrap

    &-col
      display flex
      flex-direction column
      justify-content space-between
      width 33.33333333333333%
      padding 0 5%

      +xxs()
        width 70%
        margin 0 auto 60px
        padding 0

        &:last-child
          margin-bottom 0

    &-title
      margin-bottom 30px
      font-size 18px
      text-align center

      +xxs()
        margin-bottom 50px