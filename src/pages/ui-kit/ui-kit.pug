include ../../components/subheading/subheading
include ../../components/button/button
include ../../components/arrow-button/arrow-button
include ../../components/chart/chart
include ../../components/slider/slider
include ../../components/stage/stage
include ../../components/contact-from/contact-form
include ../../components/toggle/toggle
include ../../components/tick-box/tick-box
include ../../components/search/search
include ../../components/dropdown/dropdown
include ../../components/user/user
include ../../components/news/news
include ../../components/map/map
include ../../components/calendar/calendar
include ../../components/messaging/messaging
include ../../components/player/player

doctype html
html
  meta(charset="utf-8")
  meta(name="viewport" content="initial-scale=1.0, width=device-width")
  meta(name="keywords", content="ui-kit")
  meta(name="description", content="Ui-kit for developing web interfaces")
  meta(name="msapplication-TileColor" content="#9f00a7")
  meta(name="theme-color" content="#ffffff")
  title FlatUI
  link(rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png")
  link(rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png")
  link(rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png")
  link(rel="manifest" href="site.webmanifest")
  link(rel="mask-icon" href="safari-pinned-tab.svg" color="#5bbad5")
  body
    .body-wrapper
      main.ui-kit
        section.ui-kit__standart-buttons
          .ui-kit__standart-buttons-title-container
            +subheading({title: "standard buttons", tag: "h1"})
          .ui-kit__standart-buttons-container
            .ui-kit__button-container
              +button({
                text: "button",
                size: "small",
                background: "secondary"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                background: "secondary"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                background: "primary"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                size: "small",
                background: "primary"
              })
          .ui-kit__standart-buttons-container
            .ui-kit__button-container
              +button({
                text: "button",
                size: "small",
                background: "secondary-with-shadow"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                background: "secondary-with-shadow"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                background: "primary-with-shadow"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                size: "small",
                background: "primary-with-shadow"
              })
          .ui-kit__standart-buttons-container
            .ui-kit__button-container
              +button({
                text: "button",
                size: "small",
                background: "transparent-secondary"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                background: "transparent-secondary"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                background: "transparent-primary"
              })
            .ui-kit__button-container
              +button({
                text: "button",
                size: "small",
                background: "transparent-primary"
              })
        section.ui-kit__arrow-buttons
          .ui-kit__arrow-buttons-title-container
            +subheading({title: "arrow buttons"})
          .ui-kit__arrow-buttons-container
            .ui-kit__arrow-button-container
              +arrow-button({background: "transparent", direction: "left"})
            .ui-kit__arrow-button-container
              +arrow-button({background: "transparent", direction: "right"})
            .ui-kit__arrow-button-container
              +arrow-button({
                background: "transparent",
                direction: "left",
                isDisabled: true
              })
            .ui-kit__arrow-button-container
              +arrow-button({
                background: "transparent",
                direction: "right",
                isDisabled: true
              })
            .ui-kit__arrow-button-container
              +arrow-button({background: "transparent", direction: "left"})
            .ui-kit__arrow-button-container
              +arrow-button({background: "transparent", direction: "right"})
        section.ui-kit__percentages
          .ui-kit__percentages-title-container
            +subheading({title: "percentages / pie chart"})
          .ui-kit__percentages-container
            .ui-kit__percentage-container
              +chart({type: "percentage", value: 0})
            .ui-kit__percentage-container
              +chart({type: "percentage", value: 38})
            .ui-kit__percentage-container
              +chart({type: "percentage", value: 62})
            .ui-kit__percentage-container
              +chart({type: "percentage", value: 89})
            .ui-kit__percentage-container
              +chart({type: "pie-chart", series: "10, 27, 30, 33"})
        section.ui-kit__sliders
          .ui-kit__sliders-title-container
            +subheading({title: "sliders"})
          .ui-kit__sliders-container
            .ui-kit__sliders-col
              +slider({isTip: true, currentValue: "36"})
            .ui-kit__sliders-col
              +slider({isScale: true, progressBackground: "secondary", currentValue: "75", step: "25"})
        section.ui-kit__stages
          .ui-kit__stages-title-container
            +subheading({title: "stages"})
          +stage({length: 5, fullLength: 3})
        section.ui-kit__form-elements
          .ui-kit__form-elements-title-container
            +subheading({title: "form elements"})
          .ui-kit__form-elements-container
            .ui-kit__form-elements-col
              .ui-kit__form-container
                +contact-form
            .ui-kit__form-elements-col
              .ui-kit__form-elements-subtitle-container
                +subheading({title: "toggles"})
              .ui-kit__toggle-container
                +toggle
              .ui-kit__toggle-container
                +toggle({isChecked: true})
              .ui-kit__form-elements-subtitle-container
                +subheading({title: "tick boxes"})
              .ui-kit__tick-box-container
                +tick-box(true)
              .ui-kit__tick-box-container
                +tick-box
        section.ui-kit__search
          .ui-kit__search-col
            .ui-kit__search-title-container
              +subheading({title: "search / drop down"})
            .ui-kit__search-container
              +search({placeholderText: "Search"})
            .ui-kit__search-container
              +search({
                placeholderText: "I’ve not found what I’m looking for...",
                searchBackground: "primary"
              })
            +dropdown({
              "1": "This is option 1",
              "2": "This is option 2",
              "3": "This is option 3",
              "4": "This is option 4"
            },
            "Choose An Option")
          .ui-kit__search-col
            .ui-kit__search-title-container
              +subheading({title: "user profile"})
            .ui-kit__user-container
              +user({imageSrc: "user-1", name: "John Smith", profession: "ux designer"})
            .ui-kit__user-container
              +user({
                imageSrc: "user-2",
                name: "Sarah Brown",
                profession: "developer",
                backgroundColor: "secondary"
              })
        section.ui-kit__news
          .ui-kit__news-title-container
            +subheading({title: "news & events"})
          .ui-kit__news-container
            .ui-kit__news-col
              +news({
                image: "news-1",
                title: "It’s all going downhill",
                date: "24  august  2013",
                description: "Lorem ipsum dolor sit amet, consectetur adipiscing " +
                    "elit. Sed condimentum aliquet venenatis. Etiam a nisi " +
                    "nunc, a tincidunt eros."
              })
            .ui-kit__news-col
              +news({
                image: "news-2",
                title: "this is the title",
                date: ["24", "Aug"],
                description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
                isEvent: true
              })
        section.ui-kit__location
          .ui-kit__location-title-container
            +subheading({title: "location"})
          +map({state: "1259  California St", city: "San Francisco, CA"})
        section.ui-kit__calendar
          .ui-kit__calendar-col
            .ui-kit__calendar-title-container
              +subheading({title: "calendar"})
            +calendar
          .ui-kit__calendar-col
            .ui-kit__calendar-title-container
              +subheading({title: "messaging"})
            +messaging
        section.ui-kit__video
          .ui-kit__video-title-container
            +subheading({title: "video"})
          +player({
            src: "http://viktoriya-chernenko.tk/video/Landscapes-Volume-Two.mp4",
            title: "New Zealand Landscapes Timelapse",
            author: "from Bevan Percival"
          })
