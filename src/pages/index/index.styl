@import "../../styles/variables.styl"

.index
  &__container
    max-width 1200px
    margin 0 auto

  &__fluid-container
    padding 0 10px
    background black-background-color

  &__subheading-container
    padding 40px 0

  &__about-container
    max-width 800px
    margin 0 auto
    padding-bottom 40px

  &__news-container
    display flex
    flex-wrap wrap
    padding 0 10px

    +sm()
      justify-content center

  &__news-col
    display flex
    width 33.33333333333333%
    padding 0 20px 40px

    +md()
      width 50%

    +sm()
      width 90%

    +xxs()
      width 100%