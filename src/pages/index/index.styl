.index
  &__container
    max-width 1200px
    margin 0 auto
  &__fluid-container
    padding 0 rem(10px)
    background #212121
  &__subheading-container
    padding rem(40px) 0
  &__about-container
    max-width 800px
    margin 0 auto
    padding-bottom rem(40px)
  &__news-container
    display flex
    flex-wrap wrap
    padding 0 rem(10px)
    +sm()
      justify-content center
  &__news-col
    display flex
    width 33.33333333333333%
    padding 0 rem(20px) rem(40px)
    +md()
      width 50%
    +sm()
      width 90%
    +xxs()
      width 100%