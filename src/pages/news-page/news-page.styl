.news-page
  display flex
  flex-wrap wrap
  padding rem(80px) rem(10px)
  &__col
    &_4-size
      padding rem(121px) 5% 0 0
      width 30%
      +md()
        width 25%
        padding-right 1.5%
      +sm()
        width 30%
      +xs()
        order 2
        width 100%
        max-width 450px
        margin 0 auto
        padding-right 0
      .subheading
        padding 0
      .search
        margin-bottom rem(40px)
    &_8-size
      display flex
      flex-wrap wrap
      width 70%
      +md()
        width 75%
      +sm()
        width 70%
      +xs()
        width 100%
        max-width 450px
        margin 0 auto
      .news
        width 47%
        margin 0 1.5% rem(20px)
        +sm()
          width 100%
          margin-right 0
  &__title
    width 100%