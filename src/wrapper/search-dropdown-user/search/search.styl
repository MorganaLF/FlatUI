.search
  position: relative
  border-radius: 4px
  overflow: hidden
  &__input
    width: 100%
    input()
    &_color_primary
      color #ffffff
      background-color primary-color
      +placeholder()
        color #ffffff
  &__button
    position: absolute
    top: 0
    right: 0
    bottom: 0
    width 33px
    border: none
    background primary-color url("images/search.svg") no-repeat center
    background-size: 50%
    cursor: pointer