.toggle
  position: relative
  display: inline-block
  width rem(60px)
  height rem(24px)
  border-radius: rem(34px)
  overflow: hidden
  &__input
    opacity: 0
    width: 0
    height: 0
    &:checked + .toggle__switch
      background-color secondary-color
    &:checked + .toggle__switch
      margin-left: 0
  &__switch
    width: rem(101px)
    height: 100%
    display: flex
    justify-content: center
    position: absolute
    cursor: pointer
    top: 0
    background-color light-grey
    margin-left: rem(-35px)
    transition: .4s
  &__switch
    &--round
      height: rem(18px)
      width: rem(18px)
      margin-top: rem(3px)
      border-radius: 50%
      background-color: white
      transition: .4s
    &--text
      padding: rem(5px) rem(7px)
      font-size rem(12px)
      font-weight: 700
      letter-spacing rem(0.6px)
      text-transform uppercase
      color #ffffff
