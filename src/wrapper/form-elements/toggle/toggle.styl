.toggle
  position: relative
  display: inline-block
  width 60px
  height 24px
  border-radius: 34px
  overflow: hidden
  &__input
    opacity: 0
    width: 0
    height: 0
    &:checked + .toggle__switch
      background-color secondary-color
    &:checked + .toggle__switch
      transform: translateX(0)
  &__switch
    width: 100px
    height: 100%
    display: flex
    justify-content: center
    position: absolute
    cursor: pointer
    top: 0
    background-color light-grey
    transform: translateX(-34px)
    transition: .4s
  &__switch
    &--round
      height: 18px
      width: 18px
      margin-top: 3px
      border-radius: 50%
      background-color: white
      transition: .4s
    &--text
      padding: 5px 7px
      font-size 12px
      font-weight: 700
      letter-spacing 0.6px
      text-transform uppercase
      color #ffffff
