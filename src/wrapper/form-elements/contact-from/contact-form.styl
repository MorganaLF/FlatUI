.contact-form
  display: flex
  flex-wrap: wrap
  justify-content: flex-end
  &__input
  &__textarea
    border: none
    border-radius: 3px
    font-size 14px
    background-color light-grey
  &__input
    width: 72.7%
    margin-bottom: 12px
    padding: 6px 12px
  &__tip
    position: relative
    width: calc(27.3% - 7px)
    margin: 0 0 12px 7px
    padding: 8px 0
    border-radius: 5px
    font-weight: 700
    font-size 10px
    text-align: center
    letter-spacing 0.5px
    text-transform uppercase
    color #fff
    background: primary-color
    &:after
      content: ''
      position: absolute
      top: 11px
      left: -3px
      width: 7px
      height: 7px
      transform rotate(45deg)
      background: primary-color
    &_bg_secondary
      background: secondary-color
      &:after
        background: secondary-color
  &__textarea
    width: 100%
    height 88px
    margin-bottom: 10px
    padding: 11px 12px