include percentage/percentage
include pie-chart/pie-chart

mixin percentagesAndCharts
    .percentages-and-charts
        .percentages-and-charts__title-container
            +subheading('PERCENTAGES / PIE CHART')
        .percentages-and-charts__container
            +percentage(0)
            +percentage(38)
            +percentage(62)
            +percentage(89)
            +pieChart('30, 85, 100, 100')



