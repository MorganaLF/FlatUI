.video__container
  .subheading
    margin: 42px 0 13px

.video
  position: relative
  width: 100%
  padding-bottom: 56.25%
  border-radius: 4px
  overflow: hidden
  &__iframe
    position: absolute
    width: 100%
    height: 100%
    top: 0
    right: 0
    bottom: 0
    left: 0
  &__footer
    position: absolute
    bottom: 0
    left: 0
    display: flex
    align-items center
    width: 100%
    background-color #000000
  &__progress
    width: 100%
    height: 5px
    border-radius: 3px
    background-color light-grey
    &--full
      width: 0
      height: 100%
      border-radius: 3px
      background-color primary-color
  &__play-button
    width 10px
    height 14px
    margin: 0 19px 0 21px
    background: url("images/Play_Icon.svg") no-repeat center center;
    background-size: cover
    transition all 0.3s ease
    &_playing
      background-image: url("images/pause.svg");
  &__full-button
    flex-shrink: 0
    width 48px
    height 48px
    margin-left: 22px
    background primary-color url("images/full.svg") no-repeat center center
    background-size: 47%
    transition all 0.3s ease
    &_opened
      background-image: url("images/exit-full.svg");
