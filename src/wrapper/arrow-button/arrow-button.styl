.arrow-buttons__container
  display: flex
  flex-wrap: wrap
  justify-content: center
  .subheading
    margin: 43px 0 25px

.arrow-button
  width: 50px
  height: 50px
  margin: 0 12px
  border: none
  border-radius: 50%
  background: url('images/arrow-left.svg') no-repeat center center
  background-size: 36%
  transition background 0.3s ease
  &_bg
    &_transparent-secondary
      border 3px solid secondary-color
      background-color: none
      &:hover
        background-color: secondary-color
      &.arrow-button_arrow_left-secondary:hover,
      &.arrow-button_arrow_left-secondary:disabled
        background-image: url('images/arrow-white-left.svg')
      &.arrow-button_arrow_right-secondary:hover,
      &.arrow-button_arrow_right-secondary:disabled
        background-image: url('images/arrow-white-right.svg')
    &_disabled
      background-color light-grey
    &_secondary
      background-color secondary-color
  &_arrow
    &_left-white
      background-image: url('images/arrow-white-left.svg')
      background-size: 32%
    &_right-white
      background-image: url('images/arrow-white-right.svg')
      background-size: 32%
    &_left-secondary
      background-image: url('images/arrow-left.svg')
    &_right-secondary
      background-image: url('images/arrow-right.svg')
  &:disabled
    border: none
    background-color light-grey