.arrow-buttons__container
  display: flex
  flex-wrap: wrap
  justify-content: center
  .subheading
    margin: rem(43px) 0 rem(25px)
  .arrow-button
    margin: 0 2%
  +xxs()
    max-width: 310px
    margin: 0 auto
    .arrow-button
      margin: 0 2% rem(15px)
      &:nth-child(4)
        order: 5
      &:nth-child(5)
        order: 6

.arrow-button
  width: rem(50px)
  border: none
  border-radius: 50%
  background: url('images/arrow-left.svg') no-repeat left 42% center
  background-size: 35%
  transition background 0.3s ease
  overflow: hidden
  &:before
    content: ''
    float: left
    padding-top: 100%
  &_bg
    &_transparent-secondary
      border 3px solid secondary-color
      background-color: none
      &:hover
        background-color: secondary-color
      &.arrow-button_arrow_left-secondary:hover,
      &.arrow-button_arrow_left-secondary:disabled
        background-image: url('images/arrow-white-left.svg')
      &.arrow-button_arrow_right-secondary:hover,
      &.arrow-button_arrow_right-secondary:disabled
        background-image: url('images/arrow-white-right.svg')
    &_disabled
      background-color light-grey
    &_secondary
      background-color secondary-color
  &_arrow
    &_left-white
      background-image: url('images/arrow-white-left.svg')
      background-size: 35%
    &_right-white
      background-image: url('images/arrow-white-right.svg')
      //background-position right 42% center
      background-size: 35%
    &_left-secondary
      background-image: url('images/arrow-left.svg')
    &_right-secondary
      background-image: url('images/arrow-right.svg')
      background-position right 43% center
  &:disabled
    border 3px solid light-grey
    background-color light-grey