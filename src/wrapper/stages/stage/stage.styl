.stage
  display: flex
  justify-content: space-between
  align-items center
  list-style-type: none
  &__line
    top: calc(50% - 2.5px)
    left: 0
    width: 100%
    border-bottom: 5px solid primary-color
    &_inactive
      border-bottom-color light-grey
  &__item
    flex-shrink 0
    width: rem(29px)
    height: rem(29px)
    border-radius: 50%
    padding-top: rem(6px)
    background-color primary-color
    font-size rem(14px)
    font-weight: 900
    color #fff
    &_inactive
      background-color light-grey
      color dark-grey-text
    +xxs()
      width: rem(25px)
      height: rem(25px)
      padding-top: rem(6px)
      font-size rem(11px)