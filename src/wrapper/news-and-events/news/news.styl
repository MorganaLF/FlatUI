.news
  display: flex
  background-color primary-color
  text-align: left
  .button
    margin: 18px 4px 0 0
    padding: 5px 12px
  &_bg_secondary
    background-color secondary-color
    .news__text-block
      padding-bottom: 25px
  &__picture
    flex-shrink: 0
    width: 33.5%
    background-position: center center
    background-size: cover
  &__text-block
    padding: 22px 22px 36px 22px
  &__title
    margin-bottom: 14px
    font-size 28px
    font-weight 300
    line-height 26px
    color #ffffff
    &_size_small
      margin-bottom: -2px
      font-size 13px
      font-weight: 700
      text-transform uppercase
      letter-spacing 0.63px
  &__date
    display: block
    margin-bottom: 16px
    font-size 11px
    font-weight 700
    line-height: 0.7
    text-transform uppercase
    letter-spacing 0.55px
    color #ffffff
    &_size_big
      margin-bottom: 20px
  &__day
    font-size 73px
    font-weight 300
    letter-spacing -2.92px
  &__month
    font-size 30px
    font-weight 300
    text-transform: none
  &__description
    font-size 11px
    font-weight: 300
    letter-spacing 0.55px
    line-height: 1.2
    color #ffffff
  &__button-container
    text-align: center
