.news
  display: flex
  background-color primary-color
  text-align: left
  .button
    margin: rem(18px) rem(4px) 0 0
    padding: rem(5px) rem(12px)
  &_bg_secondary
    background-color secondary-color
    .news__text-block
      padding-bottom: rem(25px)
  &__picture
    flex-shrink: 0
    width: 33.5%
    background-position: center center
    background-size: cover
  &__text-block
    padding: rem(22px) rem(22px) rem(36px) rem(22px)
  &__title
    margin-bottom: rem(14px)
    font-size rem(28px)
    font-weight 300
    line-height rem(26px)
    color #ffffff
    &_size_small
      margin-bottom: rem(-2px)
      font-size rem(13px)
      font-weight: 700
      text-transform uppercase
      letter-spacing rem(0.63px)
  &__date
    display: block
    margin-bottom: rem(16px)
    font-size rem(11px)
    font-weight 700
    line-height: 0.7
    text-transform uppercase
    letter-spacing rem(0.55px)
    color #ffffff
    &_size_big
      margin-bottom: rem(20px)
  &__day
    font-size rem(73px)
    font-weight 300
    letter-spacing rem(-2.92px)
  &__month
    font-size rem(30px)
    font-weight 300
    text-transform: none
  &__description
    font-size rem(11px)
    font-weight: 300
    letter-spacing rem(0.55px)
    line-height: 1.2
    color #ffffff
  &__button-container
    text-align: center
  +xs()
    .button
      margin: rem(18px) 0 0 0
  +xxs()
    &__text-block
      padding: rem(12px) rem(12px) rem(26px) rem(12px)
