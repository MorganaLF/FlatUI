.calendar
  background-color #f2f2f2
  &__container
    border-radius: 3px
    overflow: hidden
  &__header
    padding: rem(10px) 0 rem(8px)
    font-size 80px
    font-weight 300
    letter-spacing rem(-3.2px)
    color #ffffff
    background-color primary-color
  .ui-datepicker
    width: 100%
    padding: 0
    border: none
    font-family Lato
  .ui-datepicker-calendar
    margin: 0
  .ui-datepicker-header
    display: flex
    justify-content: space-between
    align-items: center
    padding: rem(8px) 0
    border: none
    border-radius: 0
    background-color darker-primary-color
  .ui-datepicker-title
    order: 1
    width: 70%
    margin: 0
    padding: 0
    font-size 24px
    font-weight 300
    line-height: 1em
    color #ffffff
    white-space: nowrap
  .ui-datepicker-year
    display: none
  .ui-helper-clearfix:before
  .ui-helper-clearfix:after
    display: none
  .ui-datepicker-prev
  .ui-datepicker-next
    position: static
    cursor: pointer
    width: 10%
  .ui-datepicker-prev
    margin: rem(2px) 0 0 rem(9px)
  .ui-datepicker-next
    order: 2
    margin: rem(2px) rem(9px) 0 0
  .ui-datepicker-prev-hover
  .ui-datepicker-next-hover
    background: none
    border: none
    position: static
  .ui-icon
    display: block
    width: 100%
    height: 100%
    background: none
    &.ui-icon-circle-triangle-e
      margin: 0
      position: static
      background: url("images/Arrow_Right.svg") no-repeat center center
      background-size: 37%
    &.ui-icon-circle-triangle-w
      margin: 0
      position: static
      background: url("images/Arrow_Left.svg") no-repeat center center
      background-size: 37%
  thead
    border-radius: 0
    font-size 9px
    font-weight: 900
    text-transform uppercase
    letter-spacing rem(0.45px)
    background-color primary-color
    color #ffffff
  th
    padding: rem(10px) 0 rem(8px)
    font-weight: 900
  td
    width: 14.28571428571429%
    position: relative
    overflow: hidden
    background-color #f2f2f2
    border: 1px solid #fff
    cursor: pointer
    &:hover
      background-color lightness(primary-color, 75%)
      .ui-state-default
        color: #ffffff
    &:before
      content: ''
      float: left
      padding-top: 100%
  .ui-state-default
    height: 100%
    padding: 18% 0 0
    border: none
    text-align: center
    font-family 'Source Sans Pro'
    font-size: 20px
    background: none
    color #868686
    &.ui-state-highlight
      color: #ffffff
  .ui-state-disabled
    opacity: 1
    color: #ffffff
  .ui-state-active
    color: #ffffff
  .ui-datepicker-current-day
    background-color lightness(primary-color, 75%)
    color: #ffffff
  .ui-datepicker-today
    color: #ffffff
    background-color primary-color
    &:hover
      background-color primary-color
    .ui-state-active
      color #ffffff
  &__footer
    padding: rem(17px) rem(20px)
    font-size 13px
    font-weight: 900
    text-transform uppercase
    text-align: left
    letter-spacing rem(0.65px)
    color #868686
    background-color light-grey