.ui-kit-arrow-buttons
  &__title-container
    margin rem(43px) 0 rem(25px)
  &__buttons-container
    display flex
    flex-wrap wrap
    justify-content center
    +xxs()
      max-width 310px
      margin 0 auto
    .arrow-button
      margin 0 2%
      +xxs()
        margin 0 2% rem(15px)
        &:nth-child(3)
          order 5
        &:nth-child(4)
          order 6

