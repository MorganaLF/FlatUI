mixin slider({isTip, isScale, progressBackground, value})
  .slider__container
    .slider.js-slider(
        class=progressBackground ?
              "slider_with-progress slider_" + progressBackground : ""
        data-value=value ? value : 0
      )
      .custom-handle.ui-slider-handle
        if isTip
          .slider__tip.js-slider__tip
    if isScale
      ul.slider__scale
        li.slider__scale-item 0
        li.slider__scale-item 25
        li.slider__scale-item 50
        li.slider__scale-item 75
        li.slider__scale-item 100

