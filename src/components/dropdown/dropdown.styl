@import "../../styles/variables.styl"
@import "../../../node_modules/select2/dist/css/select2.min.css"

.dropdown
  width 100%
  font-family "Source Sans Pro", "Arial", sans-serif

  &__container
    border-radius 3px
    overflow hidden

    .select2-container
      background-color light-grey

    .select2-container--open
      background-color secondary-color

      .select2-selection--single
        .select2-selection__rendered
          color white

    .select2-selection--single
      input()
      padding 4px 25px 6px 12px
      background-color transparent

      &:focus
        background secondary-color

      &:focus .select2-selection__rendered
      &:focus .select2-selection__placeholder
        color white

      .select2-selection__rendered
        color dark-grey-text
        line-height 1.2
        padding-left 0

      .select2-selection__placeholder
        line-height 1

      .select2-selection__arrow
        top 0
        right 0
        bottom 0
        height auto
        width 33px
        border-radius 0 3px 3px 0
        background secondary-color url("images/dropdown-arrow.svg") no-repeat center
        background-size 45%

        b
          display none

  &__option
    padding 6px 0
    border none
    border-radius 3px
    background secondary-color
    color white
    font-family "Source Sans Pro", "Arial", sans-serif

.select2-results__option
  padding 6px 12px

.select2-container--default .select2-results__option[aria-selected=true]
  background-color lightness(secondary-color, 65%)

.select2-container--default .select2-results__option--highlighted[aria-selected]
  background-color lightness(secondary-color, 65%)

.select2-container--open
  .select2-dropdown--above
    transform translate(0, 2px)

  .select2-dropdown--below
    transform translate(0, -2px)
