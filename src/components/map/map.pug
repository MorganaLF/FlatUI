mixin map({state, city})
  .map.js-map
    .map__body.js-map__body
    .map__footer
      span.map__title Meet us!
      .map__adress
        p.map__text= state
        p.map__text= city
      .map__buttons
        button.map__button.map__geolocation-button.js-map__geolocation-button
          include location.svg
        button.map__button.map__add-button.js-map__add-button
          include white-map-marker.svg