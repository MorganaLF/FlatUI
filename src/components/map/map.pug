mixin map
  .map__container
    .map
    .map__footer
      span.map__title Meet us!
      .map__adress
        p.map__adress-text 1259  California St
        p.map__adress-text San Francisco, CA
      .map__buttons
        button.map__geolocation
          include location.svg
        button.map__add
          include white-map-marker.svg