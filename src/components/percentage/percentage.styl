.percentage
  flex-shrink 0
  position relative
  //border-radius 50%
  square()
  &__value
    display: inline-block
    margin-top 50%
    text-align center
    font-size rem(40px)
    font-weight 300
    color grey-text
    transform translate(0, -50%)
  &__svg
    position absolute
    top 0
    left 0
    right 0
    bottom 0 /* Необходимо для корректного отображения высоты в IE */
    width 100%
    height 100%
    transform rotate(-90deg)
    transform-origin center center
  &__bar
    stroke primary-color
    stroke-width rem(10px)
    stroke-dashoffset 0
