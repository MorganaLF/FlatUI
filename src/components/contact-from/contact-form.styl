@import "../../styles/variables.styl"

.contact-form
  &__input-group
    display flex
    margin-bottom 12px

  &__input
  &__textarea
    input()
    border-radius 3px
    transition all 0.3s ease

    &:hover
    &:focus
      border 1px solid secondary-color

  &__input
    min-width 0
    flex-grow 1

  &__tip
    position relative
    flex-shrink 0
    width 72px
    margin-left 7px
    padding 4px 8px
    border-radius 5px
    text-align center

    &:after
      content ""
      position absolute
      top 50%
      left 0
      width 5px
      height 5px
      display inline-block
      transform  translate(-50%, -50%) rotate(45deg)

    &_with-error
    &_with-error:after
      background primary-color

    &_with-success
    &_with-success:after
      background secondary-color

    &-text
      font-size 10px
      letter-spacing 0.5px
      text-transform uppercase
      color white
      break-word()

  &__textarea
    width 100%
    min-height 88px
    margin-bottom 7px
    padding 10px 12px

  &__left-button-container
    text-align left

  &__button-container
    text-align right
