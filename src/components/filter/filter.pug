include ../../components/dropdown/dropdown
include ../../components/slider/slider
include ../../components/tick-box/tick-box
include ../../components/button/button

mixin filter
  form.filter(
    action="mock-address/change-me",
    method="get"
  )
    .filter__row
      span.filter__subtitle Choose category
      +dropdown({
        "category-1": "Web design",
        "category-2": "HTML",
        "category-3": "CMS"
      },
      "Choose Category")
    .filter__row
      span.filter__subtitle Min cost of work
      .filter__slider-container
        +slider({isTip: true, value: "10"})
    .filter__row
      span.filter__subtitle Max cost of work
      .filter__slider-container
        +slider({isTip: true, value: "90"})
    .filter__row.filter__row_with-flex
      span.filter__subtitle Show busy freelancers
      .filter__tick-box-container
        +tick-box(true)
    .filter__row.filter__row_with-flex
      span.filter__subtitle Show only best freelancers
      .filter__tick-box-container
        +tick-box
    +button({
      text: "show results",
      background: "primary",
      isFluid: true,
      type: "submit"
    })