include ../button/button

mixin uiKitStandartButtons
  section.ui-kit-standart-buttons
    .ui-kit-standart-buttons__title-container
      +subheading("standard buttons", "h1")
    .ui-kit-standart-buttons__buttons-container
      +button({
        text: "button",
        size: "small",
        bg: "secondary"
      })
      +button({
        text: "button",
        bg: "secondary"
      })
      +button({
        text: "button",
        bg: "primary"
      })
      +button({
        text: "button",
        size: "small",
        bg: "primary"
      })
    .ui-kit-standart-buttons__buttons-container
      +button({
        text: "button",
        size: "small",
        bg: "secondary-shadow"
      })
      +button({
        text: "button",
        bg: "secondary-shadow"
      })
      +button({
        text: "button",
        bg: "primary-shadow"
      })
      +button({
        text: "button",
        size: "small",
        bg: "primary-shadow"
      })
    .ui-kit-standart-buttons__buttons-container
      +button({
        text: "button",
        size: "small",
        bg: "transparent-secondary"
      })
      +button({
        text: "button",
        bg: "transparent-secondary"
      })
      +button({
        text: "button",
        bg: "transparent-primary"
      })
      +button({
        text: "button",
        size: "small",
        bg: "transparent-primary"
      })
