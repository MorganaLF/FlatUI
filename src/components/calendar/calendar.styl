@import "../../styles/variables.styl"
@import "../../plugins/jQuery-UI/jquery-ui.min.css"

.calendar
  border-radius 3px
  overflow hidden

  &__body
    background-color grey-background-color

  &__header
    padding 10px 10px 8px
    font-size 80px
    font-weight 300
    letter-spacing -3.2px
    text-align center
    color white
    background-color primary-color

  .ui-datepicker
    width 100%
    padding 0
    border none
    font-family "Lato", "Arial", sans-serif

  .ui-helper-clearfix:before
  .ui-helper-clearfix:after
    display none

  .ui-datepicker-header
    display flex
    justify-content space-between
    align-items center
    padding 8px 0
    border none
    border-radius 0
    background-color darker-primary-color

  .ui-datepicker-prev
  .ui-datepicker-next
    position static
    cursor pointer
    width 10%

  .ui-datepicker-prev
    margin 2px 0 0 9px

  .ui-datepicker-next
    order 2
    margin 2px 9px 0 0

  .ui-datepicker-prev-hover
  .ui-datepicker-next-hover
    background none
    border none
    position static

  .ui-icon
    display inline-block
    width 100%
    height 100%
    background none

    &.ui-icon-circle-triangle-e
      margin 0
      position static
      background url("images/calendar-arrow-right.svg") no-repeat center center
      background-size 37%

    &.ui-icon-circle-triangle-w
      margin 0
      position static
      background url("images/calendar-arrow-left.svg") no-repeat center center
      background-size 37%

  .ui-datepicker-title
    order 1
    width 70%
    margin 0
    padding 0
    font-size 24px
    font-weight 300
    line-height 1em
    color white
    white-space nowrap

  .ui-datepicker-year
    display none

  .ui-datepicker-calendar
    width 100%
    margin 0

  thead
    border-radius 0
    font-size 9px
    text-transform uppercase
    letter-spacing 0.45px
    background-color primary-color
    color white

  th
    padding 10px 0 8px
    font-weight 400

  td
    width 14.28571428571429%
    background-color grey-background-color
    border 1px solid white
    text-align center
    cursor pointer
    square()

    &:not(.ui-datepicker-current-day)
      &:hover
      &:focus-within
        background-color lightness(primary-color, 75%)

        .ui-state-default
          color white

  .ui-state-default
    display: inline-block
    width 100%
    height 100%
    padding 18% 0
    border none
    text-align center
    font-family "Source Sans Pro"
    font-size 20px
    background none
    color darker-grey-text

  .ui-state-disabled
    opacity 1
    color white

  .ui-state-active
    color white

  .ui-datepicker-current-day
    background-color primary-color
    color white

  &__footer
    padding 17px 20px
    font-size 13px
    font-weight 600
    text-transform uppercase
    letter-spacing 0.65px
    color darker-grey-text
    background-color light-grey
    cursor pointer