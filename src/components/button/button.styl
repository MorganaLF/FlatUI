@import "../../styles/variables.styl"

.button
  display inline-block
  position relative
  padding 10px 33px
  border none
  border-radius 3px
  font-size 12px
  font-weight 400
  text-transform uppercase
  letter-spacing 0.6px
  text-decoration none
  color white
  overflow hidden
  user-select none
  cursor pointer
  transition background 0.3s ease, color 0.3s ease
  border-bottom-width 3px

  &_xsmall
    padding 6px 12px
    font-size 10px
    border-bottom-width 2px

  &_small
    padding 6px 17px
    font-size 10px
    border-bottom-width 2px

  &_big
    padding 12px 34px
    font-size 20px

    +xs()
      font-size 16px

  &_short
    padding-left 15px
    padding-right 15px

  &_fluid
    width 100%

  &_primary
  &_primary-with-shadow
    background-color primary-color

    &:hover
    &:focus
      background-color dark-primary-color

  &_primary-with-shadow
    border-bottom-color dark-primary-color
    border-bottom-style solid

  &_secondary
  &_secondary-with-shadow
    background-color secondary-color

    &:hover
    &:focus
      background-color dark-secondary-color

  &_secondary-with-shadow
    border-bottom-color dark-secondary-color
    border-bottom-style solid

  &_transparent-primary
    background white
    color primary-color
    box-shadow inset 0 0 0 1px primary-color
    border-bottom-color primary-color
    border-bottom-style solid

    &:hover
    &:active
      background-color primary-color
      border-bottom-color dark-primary-color
      color white

    &:active
      border-bottom-width 0

    &:focus
      border-color darken(primary-color, 30%)

  &_transparent-secondary
  &_transparent-dark-secondary
    background white
    color secondary-color
    box-shadow inset 0 0 0 1px secondary-color
    border-bottom-color secondary-color
    border-bottom-style solid

    &:hover
    &:active
      background-color secondary-color
      border-bottom-color dark-secondary-color
      color white

    &:active
      border-bottom-width 0

    &:focus
      border-color darken(secondary-color, 30%)

  &_transparent-dark-secondary
    border-bottom-color dark-secondary-color

  &__ripple
    z-index 99999
    display block
    position absolute
    background rgba(white, 0.7)
    border-radius 100%
    transform scale(0)

    &_animated
      animation shadow 0.65s ease-in-out

@keyframes shadow
  100%
    opacity 0
    transform scale(2)