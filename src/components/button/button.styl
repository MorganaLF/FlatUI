.button
  display: inline-block
  position: relative
  overflow: hidden
  user-select: none
  padding: rem(10px) rem(33px)
  border: none
  border-radius: 3px
  font-size rem(12px)
  font-weight: 900
  text-transform uppercase
  letter-spacing 0.6px
  text-decoration: none
  color #ffffff
  cursor: pointer
  &__ripple-parent
    display: inline-block
    position: relative
    overflow: hidden
  &__shadow
    z-index: 99999
    display: block
    position: absolute
    background: rgba(255, 255, 255, 0.7)
    border-radius: 100%
    transform: scale(0)
    &_animated
      animation: shadow 0.65s ease-in-out
  &_size_small
    padding: rem(6px) rem(17px)
    font-size rem(10px)
  &_size_big
    padding: rem(12px) rem(34px)
    font-size rem(20px)
    +xs()
      font-size rem(16px)
  &_bg
    &_primary
      background-color primary-color
    &_primary-shadow
      background-color primary-color
      border-bottom: 3px solid dark-primary-color
      &.button_size_small
        border-bottom: 2px solid dark-primary-color
    &_secondary
      background-color secondary-color
    &_secondary-shadow
      background-color secondary-color
      border-bottom: 3px solid dark-secondary-color
      &.button_size_small
        border-bottom: 2px solid dark-secondary-color
    &_transparent-primary
      padding: rem(9px) rem(32px) rem(8px)
      background: #fff
      color: primary-color
      border: 1px solid primary-color
      border-bottom: 4px solid primary-color
      &.button_size_small
        padding: rem(5px) rem(16px) rem(4px)
        border-bottom: 3px solid primary-color
    &_transparent-secondary
      padding: rem(9px) rem(32px) rem(8px)
      background: #fff
      color: secondary-color
      border: 1px solid secondary-color
      border-bottom: 4px solid secondary-color
      &.button_size_small
        padding: rem(5px) rem(16px) rem(4px)
        border-bottom: 3px solid secondary-color
    &_transparent-dark-secondary
      padding: rem(9px) rem(32px) rem(8px)
      background: #fff
      color: secondary-color
      border: 1px solid secondary-color
      border-bottom: 4px solid dark-secondary-color
      &.button_size_small
        padding: rem(5px) rem(16px) rem(4px)
        border-bottom: 3px solid dark-secondary-color

@keyframes shadow {
  100% {
    opacity: 0
    transform: scale(2)
  }
}