.ui-kit-calendar-and-messaging
  display flex
  flex-wrap wrap
  &__col
    width 50%
    flex-shrink 0
    &:first-child
      padding-right rem(18px)
    &:last-child
      padding-left rem(8px)
    +xs()
      width 100%
      max-width 400px
      margin 0 auto
      &:first-child
      &:last-child
        padding 0
  .subheading
    margin rem(41px) 0 rem(14px)
