@import "../../../styles/variables.styl"

.settings

  &__list
    list-style-type none
    font-size 18px

    +sm()
      max-width 500px
      margin 0 auto

  &__item
    display flex
    justify-content space-between
    align-items center
    margin-bottom 20px

    &:last-child
      flex-wrap wrap

  &__slider
    width 100%
    margin-top 10px

  &__text
    padding-right 10px

  &__toggle
    flex-shrink 0
    font-size 0