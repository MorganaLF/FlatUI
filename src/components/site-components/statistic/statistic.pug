include ../../ui-kit-components/chart/chart

mixin account-statistic
  .statistic
    .statistic__col
      ul.statistic__list
        li(
            class="statistic__list-item " +
                  "statistic__list-item_grey"
          ) html - 5%
        li(
            class="statistic__list-item " +
                  "statistic__list-item_red"
          ) php - 15%
        li(
            class="statistic__list-item " +
                  "statistic__list-item_green"
          ) css - 60%
        li(
            class="statistic__list-item " +
                  "statistic__list-item_light-grey"
          ) javascript - 20%
    .statistic__col
      +chart({type: "pie-chart", series: "5, 15, 60, 20"})

