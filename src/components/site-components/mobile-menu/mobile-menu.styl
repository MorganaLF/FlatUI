@import "../../../styles/variables.styl"

.mobile-menu
  display none
  transition all 0.5s ease-in-out

  &_opened
    transform translateX(250px)

  &__button
    cursor pointer

  +md()
    z-index 9999
    display block
    position fixed
    top 0
    left 0
    width 100%
    padding 20px
    font-size 20px
    background page-dark-background
    color white
    box-shadow 0 3px 9px 0 rgba(black, 0.4)