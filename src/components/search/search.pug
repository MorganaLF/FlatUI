mixin search(placeholderText, searchBg)
  form.search(action="mock-address/change-me", method="get")
    input.search__input(
        type="search",
        name="search",
        placeholder=placeholderText,
        class=searchBg ? "search__input_color_" + searchBg : ""
      )
    input.search__button(type="submit", value="")