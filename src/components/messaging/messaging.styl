@import "../../styles/variables.styl"

.messaging
  border-radius 3px
  background-color grey-background-color
  overflow hidden
  break-word()

  &__header
    position relative
    padding 7% 20px 20%
    background-color secondary-color

    &:after
      content: ""
      display inline-block
      position absolute
      bottom 0
      left 0
      width 100%
      padding-top 12%
      background darker-secondary-color

  &__title
    font-family "Source Sans Pro", "Arial", sans-serif
    font-size 34px
    font-weight 300
    text-align center
    letter-spacing -1.02px
    color white

  &__body
    position relative
    padding 21% 22px 26px

  &__icons
    position absolute
    top 0
    left 0
    display flex
    justify-content space-between
    align-items flex-end
    width 100%
    padding 0 28px
    transform translate(0, -50%)

  &__icon
    display inline-block
    flex-shrink 0
    background-repeat no-repeat
    background-position center center
    background-size 100%
    cursor pointer

    &_with-chat
      width 21px
      height 22px
      margin-bottom 2px
      background-image url("images/chat-icon.svg")

    &_with-camera
      width 25px
      height 20px
      margin-bottom 6px
      background-image url("images/camera-icon.svg")

  &__photo
    width 40%
    border-radius 50%
    border 5px solid light-grey
    background-position top center
    background-size cover
    square()

  &__incoming
    position relative
    margin-bottom 18px
    padding 16px 20px 22px
    border-radius 5px
    background-color white

    &:after
      position absolute
      top 0
      left 50%
      content ""
      display inline-block
      width 10px
      height 10px
      transform translate(-50%, -50%) rotate(45deg)
      background-color white

    &-paragraph
      font-size 13px
      letter-spacing 0.63px
      line-height 1.2
      color darker-grey-text

  &__textarea
    width 100%
    height 88px
    margin-bottom 12px
    padding 16px 20px
    border-radius 3px
    border 3px solid white
    font-size 13px
    letter-spacing 0.63px
    background-color light-grey
    color very-dark-grey-text
    transition all 0.3s ease

    &:hover
    &:focus
      border-color lightness(secondary-color, 70%)
