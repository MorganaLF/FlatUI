.user
  display: flex
  align-items center
  max-width: 300px
  margin: 0 auto
  text-align: center
  &_size_big
    max-width: 450px
    margin: 0 auto
    .user__info
      padding: rem(15px) 0 rem(21px)
    .user__name
      font-size: 27px
      margin-bottom: 5px
    .user__profession
      font-size: 17px
      margin-bottom: 18px
    .user__social-icons
      max-width: 141px
    .user__social-icon
      display: inline-block
      &_1
        width rem(15px)
        height rem(32px)
      &_2
        width rem(38px)
        height rem(32px)
      &_3
        width rem(32px)
        height rem(32px)
  &__picture-container
    flex-shrink 0
    width: calc(35.5%)
    height: auto
    margin-right: 0.8%
    border: 5px solid light-grey
    border-radius: 50%
    font-size: 0
    square()
  &__picture
    width: 100%
  &__info
    position: relative
    width: 'calc(63.5% - %s)' % rem(7px)
    margin: 1px 0 0 rem(7px)
    padding: rem(10px) rem(10px) rem(14px)
    border-radius: 10px
    background-color light-grey
    &:after
      content: ''
      position: absolute
      top: 'calc(50% - %s)' % rem(4px)
      left: rem(-5px)
      width: rem(10px)
      height: rem(10px)
      transform rotate(45deg)
      background-color light-grey
    &_bg_secondary
      background-color secondary-color
      &:after
        background-color secondary-color
  &__name
    margin-bottom: rem(3px)
    font-size rem(18px)
    color primary-color
    break-word()
    &_color_white
      color #ffffff
  &__profession
    margin-bottom: rem(12px)
    font-size rem(11px)
    font-weight: 900
    text-transform uppercase
    letter-spacing rem(0.55px)
    color dark-grey
    break-word()
    &_color_white
      color #ffffff
  &__social-icons
    display: flex
    justify-content: space-between
    max-width: rem(94px)
    margin: 0 auto
  &__social-icon
    &_1
      width rem(10px)
      height rem(21px)
      background url("images/facebook-f-brands.svg") no-repeat center
      background-size: 100%
      &-white
        background-image: url("images/facebook-f-brands-white.svg")
    &_2
      width rem(25px)
      height rem(20px)
      background url("images/twitter-brands.svg") no-repeat center
      background-size: 100%
      &-white
        background-image: url("images/twitter-brands-white.svg")
    &_3
      width rem(21px)
      height rem(21px)
      background url("images/dribbble-brands.svg") no-repeat center
      background-size: 100%
      &-white
        background-image: url("images/dribbble-brands-white.svg")


