mixin user({imageSrc, facebookLink, twitterLink, dribbbleLink, name, profession, backgroundColor, size})
  -
    const links = [
      facebookLink || "https://www.facebook.com/",
      twitterLink || "https://twitter.com/",
      dribbbleLink || "https://dribbble.com/"
    ];

    const sizes = {
      big: "big"
    }

    const backgrounds = {
      secondary: "secondary"
    }

  .user(class=sizes[size] ? `user_${sizes[size]}` : "")
    .user__picture(
      style=`background-image: url(${imageSrc})`
      )
    .user__info(class=backgrounds[backgroundColor]
      ? `user__info_${backgrounds[backgroundColor]}`
      : ""
      )
      p.user__name(
        class=backgrounds[backgroundColor] ? "user__name_white" : ""
        class=sizes[size] ? `user__name_${sizes[size]}` : ""
        )= name
      p.user__profession(
        class=backgrounds[backgroundColor] ? "user__profession_white" : ""
        class=sizes[size] ? `user__profession_${sizes[size]}` : ""
      )= profession
      .user__social-icons(class=sizes[size] ? `user__social-icons_${sizes[size]}` : "")
        -for(let i = 1; i <= 3; i++)
          a.user__social-icon(
            href=links[i - 1]
            target="_blank"
            rel="noopener noreferrer"
            class=backgrounds[backgroundColor] ? "user__social-icon_white" : ""
            class=sizes[size] ? `user__social-icon_${sizes[size]}` : ""
          )
            case i
              when 1
                include facebook-f-brands.svg
              when 2
                include twitter-brands.svg
              when 3
                include dribbble-brands.svg