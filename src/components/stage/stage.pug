mixin stage(length, fullLength, isContent)
  .stage__container
    ul.stage
      -for (var i = 1; i <= length; i++)
      if i < fullLength
        li.stage__item
          span.stage__item-text= i
        li.stage__line
      else if i === fullLength
        li.stage__item
          span.stage__item-text= i
        li.stage__line.stage__line_inactive
      else if i < length
        li.stage__item.stage__item_inactive
          span.stage__item-text= i
        li.stage__line.stage__line_inactive
      else
        li.stage__item.stage__item_inactive
          span.stage__item-text= i
    if isContent
      .stage__content
        block