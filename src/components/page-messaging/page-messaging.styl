.page-messaging
  z-index: 999999999999
  max-width: 300px
  position: fixed
  right: 0
  bottom: 0
  margin: 5px
  text-align: right
  .messaging
    display: none
  &__button
    display: inline-block
    width: 50px
    height: 50px
    margin-top: 5px
    padding: 10px 12px
    border-radius: 50%
    font-size: 25px
    text-align: center
    color #fff
    background: secondary-color
    cursor: pointer
    transition all 0.3s ease
    &:hover
      background: #00796B
  .far
  .fas
    width: auto
    margin: 0