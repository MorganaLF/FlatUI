.freelancers
  padding rem(80px) rem(10px)
  &__container
    display flex
    flex-wrap wrap
  &__col
    &:first-child
      width 25%
      padding-right 3%
      +sm()
        order 2
        width 100%
        max-width 450px
        margin 0 auto
        padding-right 0
      .subheading
        padding-bottom rem(20px)
      .slider
        margin rem(30px) 0 rem(40px)
      .button
        width 100%
    &:last-child
      width 75%
      padding-left 3%
      +sm()
        width 100%
        padding-left 0
  &__main-title
    width 100%
    margin 0.83em 0
  &__subtitle
    display inline-block
    margin 0 rem(10px) rem(20px) 0
    font-size rem(18px)
    font-weight 700
  &__filter-row
    margin-bottom rem(30px)
    &_flex
      display flex
      justify-content space-between
  &__list
    display flex
    flex-wrap wrap
    list-style-type none
    +xs()
      flex-direction column
      align-items center
  &__freelancer
    display flex
    flex-direction column
    align-items stretch
    width 29%
    margin 0 2.166666666666667% rem(60px)
    padding-bottom rem(10px)
    border-bottom rem(1px) solid light-grey-text
    +md()
      width 42%
      margin 0 4% rem(60px)
    +sm()
      width 38%
      margin 0 6% rem(60px)
    +xs()
      width 100%
      max-width 300px
      margin 0 0 rem(60px)
    &-footer
      display flex
      justify-content space-between
      align-items center
      margin-top auto
    .button
      margin-left auto
  &__notification
    margin-right rem(10px)
    color primary-color
  .user
    margin 0 0 rem(10px)
  .news-page__nav
    padding rem(10px) 0 0
    border-top rem(1px) solid light-grey-text
    &:nth-child(2)
      margin-bottom rem(40px)
      padding 0 0 rem(10px)
      border-top 0
      border-bottom rem(1px) solid light-grey-text
  .tick-box
    flex-shrink 0




