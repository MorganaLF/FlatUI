mixin player(src, title, author)
  .player__wrapper
    video.player(src=src, width="100%", preload="none" )
    header.player__header
      h3.player__title= title
      h4.player__author= author
    .player__footer
      .player__play-button
      .player__progress-container
        .player__progress
      .player__full-button