@import "../../styles/variables.styl"

.settings

  &__list
    list-style-type none
    font-size rem(18px)
    +sm()
      max-width 500px
      margin 0 auto

  &__item
    display flex
    justify-content space-between
    align-items center
    margin-bottom rem(20px)

    &:last-child
      flex-wrap wrap

  &__slider-container
    width 100%
    margin-top rem(10px)

  &__text
    padding-right rem(10px)

  &__toggle-container
    flex-shrink 0
    font-size 0