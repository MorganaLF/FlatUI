@import "../../styles/variables.styl"

.input
  display flex

  &__area
    input()
    width 100%
    min-width 0
    flex-grow 1
    border-radius 3px
    transition all 0.3s ease

    &:hover
    &:focus
      border 1px solid secondary-color

    &:valid:not(:focus):not(:placeholder-shown) + ^[0]__tip
      display block
      background secondary-color

      &:before
        content "thanks!"

      &:after
        background secondary-color

    &:invalid:not(:focus):not(:placeholder-shown) + ^[0]__tip
      display block
      background primary-color

      &:before
        content "error"

      &:after
        background primary-color

  &__tip
    display none
    position relative
    flex-shrink 0
    width 72px
    margin-left 7px
    padding 4px 8px
    border-radius 5px
    text-align center

    &:before
      display inline-block
      position absolute
      top 50%
      left 50%
      font-size 10px
      letter-spacing 0.5px
      text-transform uppercase
      color white
      transform translate(-50%, -50%)

    &:after
      content ""
      position absolute
      top 50%
      left 0
      width 5px
      height 5px
      display inline-block
      transform  translate(-50%, -50%) rotate(45deg)