include ../pie-chart/pie-chart

mixin accountStatistic
  .account-statistic
    .account-statistic__col
      ul.account-statistic__list
        li(
            class="account-statistic__list-item " +
                  "account-statistic__list-item_grey"
          ) html - 5%
        li(
            class="account-statistic__list-item " +
                  "account-statistic__list-item_red"
          ) php - 15%
        li(
            class="account-statistic__list-item " +
                  "account-statistic__list-item_green"
          ) css - 60%
        li(
            class="account-statistic__list-item " +
                  "account-statistic__list-item_light-grey"
          ) javascript - 20%
    .account-statistic__col
      +pieChart("5, 15, 60, 20")

