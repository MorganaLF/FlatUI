@import "../../../styles/variables.styl"

.user
  display flex
  align-items center
  width 100%
  text-align center

  &_small
    max-width 300px

  &_big
    max-width 450px

    & ^[0]__name
      font-size 27px
      margin-bottom 5px

    & ^[0]__profession
      font-size 17px
      margin-bottom 18px

    & ^[0]__social-icon
      width 32px
      height 32px

      &:nth-child(2)
        width 38px
        height 38px

  &__picture
    flex-shrink 0
    width 34%
    margin-right 2%
    border 5px solid light-grey
    border-radius 50%
    background-position top center
    background-size cover
    square()

  &__info
    position relative
    width calc(64% - 7px)
    margin 0 0 0 7px
    padding 10px 10px 12px
    border-radius 10px

    &:after
      content ""
      position absolute
      top 50%
      left 0
      width 9px
      height 9px
      transform translate(-50%, -50%) rotate(45deg)
      background-color light-grey

    &_primary
      background-color light-grey

    &_secondary
      background-color secondary-color

      &:after
        background-color secondary-color

      & ^[0]__name
      & ^[0]__profession
      & ^[0]__profession
        color white

      & ^[0]__social-icon-image
      & ^[0]__social-icon:nth-child(2) ^[0]__social-icon-image
        fill white


  &__name
    margin-bottom 3px
    font-size 18px
    color primary-color
    break-word()

  &__profession
    margin-bottom 12px
    font-size 11px
    font-weight 900
    text-transform uppercase
    letter-spacing 0.55px
    color dark-grey
    break-word()

  &__social-icons
    display flex
    justify-content space-between
    align-items center
    padding 0 15%

  &__social-icon
    width 21px
    height 21px

    &:nth-child(2)
      width 25px
      height 25px

      & ^[0]__social-icon-image
        fill: primary-color

    &-image
      width: 100%
      height: 100%
      fill: grey
      transition all 0.3s ease

      &:hover
      &:focus
        opacity 0.5

