@import "../../styles/variables.styl"

.page-footer
  flex-grow 0
  padding 40px 10px
  font-size 18px
  color rgba(white, 0.4)
  background black-background-color

  &__container
    display flex
    flex-wrap wrap
    justify-content space-between
    max-width 1200px
    margin 0 auto

  &__search
    margin 0 10px

    +sm()
      display none

  &__title
    margin-bottom 10px

  &__menu
    margin 0 20px
    list-style-type none

    &-container
      +xs()
        padding-bottom 20px

      +xxs()
        width 100%

        &:nth-child(2)
          padding-bottom 0

    &-link
      display inline-block
      margin-bottom 10px
      color rgba(white, 0.4)
      transition all 0.3s ease

      &:hover
      &:focus
        color white

  &__copyright
    margin 0 20px
    align-self flex-end
    font-size 14px

    +sm()
      align-self flex-start

    &-link
      color rgba(white, 0.4)
      text-decoration none

      &:hover
      &:focus
        text-decoration underline

