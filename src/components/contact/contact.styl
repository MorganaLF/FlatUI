.contact
  max-width 900px
  padding rem(80px) rem(10px)
  &__container
    display flex
    flex-wrap wrap
    margin 0 auto
  &__col
    &:first-child
      width 70%
      padding-right 5%
      +sm()
        width 100%
        max-width 600px
        margin 0 auto
        padding-right 0
    &:last-child
      width 30%
      +sm()
        width 100%
        max-width 600px
        margin 0 auto
  &__subtitle
    margin rem(10px) 0 rem(20px)
    font-size rem(22px)
  .map__container
    margin-bottom rem(40px)
  &__list
    margin-bottom rem(40px)
    list-style-type none
    font-size rem(18px)
    &-item
      margin-bottom rem(5px)
      break-word()
  &__list-span
    display inline-block
    margin-right rem(10px)
    font-weight 900
  &__list-link
    color dark-secondary-color
    text-decoration none
    transition 0.2s ease
    &:hover
      color #000000




