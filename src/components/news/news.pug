include ../ui-kit-standart-buttons/ui-kit-standart-buttons

mixin news(options)
  -var titleTag = options.titleTag || "h3"
  if(!options.isEvent)
    article.news
      .news__picture(style="background-image: url(\"images/" + options.image + ".jpg\")")
      .news__text-block
        #{titleTag}.news__title= options.title
        span.news__date= options.date
        p.news__description= options.description
  else
    article.news.news_bg_secondary
      .news__picture(style="background-image: url(\"images/" + options.image + ".jpg\")")
      .news__text-block
        span.news__date.news__date_size_big
          span.news__day= options.date[0] + " "
          span.news__month= options.date[1]
        #{titleTag}.news__title.news__title_size_small= options.title
        p.news__description= options.description
        .news__button-container
          +button("add to calendar", "small", "transparent-dark-secondary")