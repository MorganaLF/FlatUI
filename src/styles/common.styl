@import "./variables.styl"
@import "../../node_modules/@fortawesome/fontawesome-free/css/all.css"
@import "../../node_modules/normalize-stylus/normalize.styl"

fontFace("Lato", "normal", 900, "Lato-Black")
fontFace("Lato", "normal", 700, "Lato-Bold")
fontFace("Lato", "normal", 400, "Lato-Regular")
fontFace("Lato", "normal", 300, "Lato-Light")
fontFace("Source Sans Pro", "normal", 400, "SourceSansPro-Regular")
fontFace("Source Sans Pro", "normal", 300, "SourceSansPro-Light")

html
  font-size root-font-size
  font-family "Lato", "Arial", sans-serif
  color #000000
  background: #ffffff

*
  margin 0
  padding 0
  box-sizing border-box
  outline none

remove-clear-button()

button
  cursor pointer

.body-wrapper
  position relative
  z-index 1
  display flex
  flex-direction column
  min-width 320px
  min-height 100vh
  box-shadow rem(-4px) 0 rem(18px) 0 rgba(0, 0, 0, 0.67)
  transition all 0.5s ease-in-out
  &_opened
    transform translateX(250px)

.body-content
  flex-grow 1
  background #ffffff

