.footer
  padding: 40px 0
  font-size: 18px
  color: rgba(255, 255, 255, 0.4)
  .subheading
    margin-bottom: 10px
    padding: 0
  &__container
    display: flex
    justify-content: space-between
  &__menu
    list-style-type: none
    &-link
      display: block
      margin-bottom: 10px
      color: rgba(255, 255, 255, 0.4)
      transition all 0.3s ease
      &:hover
        color: #ffffff
  &__copyright
    align-self: flex-end
    font-size: 14px
