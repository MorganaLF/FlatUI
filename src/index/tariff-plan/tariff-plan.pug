mixin tariffPlan

    .tariff-plan__container
        .tariff-plan
            h3.tariff-plan__title Lite
            ul.tariff-plan__list
                li.tariff-plan__list-item
                    p unlimited applications
                    +toggle('tariff-plan-1')
                li.tariff-plan__list-item
                    p unlimited categories
                    +toggle('tariff-plan-2')
                li.tariff-plan__list-item
                    p commission from the order
                    +toggle('tariff-plan-3', true)
            +button('choose', '', 'primary')
        .tariff-plan
            h3.tariff-plan__title Premium
            ul.tariff-plan__list
                li.tariff-plan__list-item
                    p unlimited applications
                    +toggle('tariff-plan-4', true)
                li.tariff-plan__list-item
                    p unlimited categories
                    +toggle('tariff-plan-5', true)
                li.tariff-plan__list-item
                    p commission from the order
                    +toggle('tariff-plan-6')
            +button('choose', '', 'primary')
        .tariff-plan
            h3.tariff-plan__title Standard
            ul.tariff-plan__list
                li.tariff-plan__list-item
                    p unlimited applications
                    +toggle('tariff-plan-7')
                li.tariff-plan__list-item
                    p unlimited categories
                    +toggle('tariff-plan-8', true)
                li.tariff-plan__list-item
                    p commission from the order
                    +toggle('tariff-plan-9', true)
            +button('choose', '', 'primary')